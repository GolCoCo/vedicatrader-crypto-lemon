<UserControl
    x:Class="VedicaTraderCryptoLEMON.CtrlDocumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:VedicaTraderCryptoLEMON"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <syncfusion:DocumentContainer
            x:Name="container"
            Mode="MDI"
            local:ViewModel.DocumentContainer="{Binding ElementName=container}"
            PersistState="False">
            <syncfusion:DocumentContainer.Icon>
                <ImageBrush ImageSource="App.png"/>
            </syncfusion:DocumentContainer.Icon>
        </syncfusion:DocumentContainer>
    </Grid>
</UserControl>
